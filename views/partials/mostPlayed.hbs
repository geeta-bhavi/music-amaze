
  <div class="grid-container">
    <div class="grid-x">
      {{#if mostPlayed}}
        <h3>Most Played
          <span class="text-small"><a href="/play/mostPlayed" class="playMostPlayed">Play all <i class="fi-play-circle"></i></a></span>
        </h3>
      {{/if}}
      {{#unless mostPlayed}}
        <div class="{{showMostPlayed}} text-center small-12 medium-12 large-12 cell">There aren't any songs that you have played yet!</div>
      {{/unless}}
      <ul class="small-12 medium-12 large-12 cell topTrend">
        {{#each mostPlayed}}
          <li id="{{TRACK_ID}}">
            <a title="{{TRACK_NAME}}" href="/play/album/{{ALBUM_ID}}/track/{{TRACK_ID}}">
              <img onerror="this.src='/dist/assets/error.png'" src="/assets/cover/{{ALBUM_ID}}.jpg" alt="{{ALBUM_NAME}}">
              <span>{{TRACK_NAME}}</span>
              <span class="artistName">{{ARTIST_NAME}}</span>
              <div class="hov"></div>
              <button class="cover-art-playback"><svg class="icon-play" viewBox="0 0 85 100"><path fill="currentColor" d="M81 44.6c5 3 5 7.8 0 10.8L9 98.7c-5 3-9 .7-9-5V6.3c0-5.7 4-8 9-5l72 43.3z"><title>PLAY</title></path></svg></button>
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
