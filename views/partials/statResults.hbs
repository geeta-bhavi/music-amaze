<div class="grid-container">
  <div class="grid-x">
    <div id="latlng" class="hide">{{latlng}}</div>
    <div class="small-12 medium-12 large-offset-2 large-6 cell albumDetails">
      <div class="albumHeader statHeader clearfix">
        <div class="albumName">
          {{album.albumName}}
        </div>
        <div class="artistName">
          {{album.artistName}}
        </div>
        <div>
          <div class="totalLikes">
            <span><i class="fi-like"></i></span>
            <span>{{album.totalLikes}}</span>
            <span class="text-small"> Likes</span>
          </div>
          <div class="totalDislikes">
            <span><i class="fi-dislike"></i></span>
            <span>{{album.totalDislikes}}</span>
            <span class="text-small"> Dislikes</span>
          </div>
        </div>
      </div>
      <ul id="tracks">
        <li class="trackList statResults statLi" id="{{TRACK_ID}}">
          <div class="trackItem">
            <span class="songHeader">Songs</span>
          </div>
          <div class="text-right trackTime songHeader">Streams</div>
        </li>
        {{#each stats}}
          <li class="trackList statResults" id="{{TRACK_ID}}">
            <div class="trackItem">
              <span class="songName">{{TRACK_NAME}}</span>
            </div>
            <div class="text-right trackTime">{{NUMBER_OF_PLAYS}}</div>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
