<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1, minimum-scale=1, maximum-scale=1">
  <title>{{title}}</title>
  {{> styles}}
</head>

<body class="clearfix">
  <header class="grid-x" id="header">
    <div class="small-4 medium-4 large-4 cell"><a class="logoImg" href="/"></a></div>
    <div class="small-8 medium-8 large-8 cell">
      <h1 class="centerTextSmall">{{header}}</h1>
    </div>
  </header>
  <section class="login commonForm">
    <form id="login">
      <div class="grid-container">
        <div class="grid-x">
          <div class="small-12 medium-offset-4 medium-5 large-offset-4 large-4 cell inpPadding">
            <label>Username
              <input type="text" placeholder="Username" id="userName" maxlength="30" />
            </label>
          </div>
          <div class="small-12 medium-offset-4 medium-5 large-offset-4 large-4 cell inpPadding">
            <label>Password
              <input type="password" id="userPassword" placeholder="Password" />
            </label>
          </div>
        </div>
      </div>
      <div class="btns">
        <input type="submit" value="Sign In" class="button primary">
        <input type="reset" value="Clear" id="reset" class="button primary">
      </div>
      <div class="text-center"><a href="/forgotPassword">Forgot Password?</a></div>

      <div id="emptyFields" class="hide text-center">This field is required</div>
      <div id="error"></div>
    </form>
  </section>
<div class="bodyForm"></div>
</body>
{{> scripts}}

</html>
